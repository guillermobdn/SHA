<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.sha.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Camera"
                    android:drawableLeft="@drawable/camera"
                    />

                <Button
                    android:id="@+id/flashlight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Flashlight"
                    android:drawableLeft="@drawable/flash"
                    />


                <Button
                    android:id="@+id/gyroscope"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:drawableLeft="@drawable/gyroscope"

                    android:text="Gyroscope" />


                <Button
                    android:id="@+id/orientation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Magnetic"
                    android:drawableLeft="@drawable/magnetic"/>

                <Button
                    android:id="@+id/audio"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Audio"
                    android:drawableLeft="@drawable/audio"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/proximity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Proximity"
                    android:drawableLeft="@drawable/proximity"/>


                <Button
                    android:id="@+id/lightsensor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:drawableLeft="@drawable/sensorlight"
                    android:text="Sensorlight" />

                <Button
                    android:id="@+id/battery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:drawableLeft="@drawable/battery"
                    android:text="Battery" />

                <Button
                    android:id="@+id/screen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Screen"
                    android:drawableLeft="@drawable/screen"/>


                <Button
                    android:id="@+id/mic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_button"
                    android:text="Mic"
                    android:drawableLeft="@drawable/mic"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/run_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button"
                android:text="Run All Tests"
                android:drawableBottom="@drawable/alltests"/>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
